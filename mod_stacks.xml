<?xml version="1.0" encoding="utf-8" ?>
<install type="module" version="1.5" method="upgrade">
	<name>Stacks</name>
	<author>Gregory Daynes</author>
	<creationDate>Novemeber 2010</creationDate>
	<copyright>Copyright (C) 2010 JEvolve.net. All rights reserved.</copyright>
	<license>GNU General Public License</license>
	<authorEmail>info@jevolve.net</authorEmail>
	<authorUrl>http://jevolve.net</authorUrl>
	<version></version>
	<description>JEV_STACKS_DESCRIPTION</description>
	
	<files>
		<filename module="mod_stacks">mod_stacks.php</filename>
		<filename>en-GB.mod_stacks.ini</filename>
		<folder>helpers</folder>
		<folder>elements</folder>
		<folder>tmpl</folder>
	</files>
	
	<languages>
		<language tag="en-GB">en-GB.mod_stacks.ini</language>
	</languages>
	
	<params addpath="/modules/mod_stacks/elements">
		<param name="moduleclass_sfx"
			type="text"
			default=""
		label="JEV_STACKS_MODULE_SUFFIX"
			description="PARAMMODULECLASSSUFFIX" />
		
		<param name="layout"
			type="filelist"
			label="JEV_STACKS_LAYOUT"
			description="JEV_STACKS_LAYOUT_DESCRIPTION"
			directory="/modules/mod_stacks/tmpl"
			default="default"
			hide_default="1"
			hide_none="1"
			stripext="1"
			filter="\.php$"
			exclude="^_" />
		
		<param name="contentId"
			type="text"
			label="JEV_STACKS_CONTENT_ID"
			description="JEV_STACKS_CONTENT_ID_DESCRIPTION"
			default="" />
			
		<param name="htmlselect"
			type="htmlselect"
			default=""
			label=""
			description="" />
			
		<param name="selectscript"
			type="selectscript"
			default=""
			label=""
			description="" />
		
		<param name="categories"
			type="categories"
			default=""
			multiple="multiple"
			label="JEV_STACKS_CATEGORIES"
			description="JEV_STACKS_CATEGORIES_DESCRIPTION" />
		
		<param name="frontpage"
			type="radio"
			default="0"
			label="JEV_STACKS_FRONTPAGE"
			description="JEV_STACKS_FRONTPAGE_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="readmore"
			type="radio"
			default="0"
			label="JEV_STACKS_READ_MORE"
			description="JEV_STACKS_READ_MORE_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="showtitle"
			type="radio"
			default="1"
			label="JEV_STACKS_DISPLAY_TITLE"
			description="JEV_STACKS_DISPLAY_TITLE_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
			
		<param name="showtext"
			type="radio"
			default="1"
			label="JEV_STACKS_DISPLAY_TEXT"
			description="JEV_STACKS_DISPLAY_TEXT_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="linktext"
			type="radio"
			default="1"
			label="JEV_STACKS_LINK_TEXT"
			description="JEV_STACKS_LINK_TEXT_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="linktitle"
			type="radio"
			default="1"
			label="JEV_STACKS_LINK_TITLE"
			description="JEV_STACKS_LINK_TITLE_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="image"
			type="radio"
			default="0"
			label="JEV_STACKS_IMAGE"
			description="JEV_STACKS_IMAGE_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="imagewidth"
			type="text"
			default="100"
			label="JEV_STACKS_IMAGE_WIDTH"
			description="JEV_STACKS_IMAGE_WIDTH_DESCRIPTION" />
			
		<param name="imageheight"
			type="text"
			default="100"
			label="JEV_STACKS_IMAGE_HEIGHT"
			description="JEV_STACKS_IMAGE_HEIGHT_DESCRIPTION" />
		
		<param name="tabs"
			type="radio"
			default="1"
			label="JEV_STACKS_TABS"
			description="JEV_STACKS_TABS_DESCRIPTION">
			<option value="0">NONE</option>
			<option value="1">TITLES</option>
			<option value="2">NUMBERS</option>
			<option value="3">BULLETS</option>
			</param>
		
		<param name="itemcount"
			type="text"
			default="10"
			label="JEV_STACKS_NUMBER_OF_ITEMS"
			description="JEV_STACKS_NUMBER_OF_ITEMS_DESCRIPTION" />
		
		<param name="order" type="list" default="ordering ASC" label="ordering" description="">
			<option value="content.ordering ASC">Manual: Ascending</option>
			<option value="content.ordering DESC">Manual: Descending</option>
			<option value="content.publish_up ASC">Publish Date: Ascending</option>
			<option value="content.publish_up DESC">Publish Date: Descending</option>
			<option value="content.created ASC">Created: Ascending</option>
			<option value="content.created DESC">Created: Descending</option>
			<option value="content.title ASC">Alphabetical: Ascending</option>
			<option value="content.title DESC">Alphabetical: Descending</option>
			</param>
		
		<param name="readmoretext"
			type="text"
			default="[read more]"
			label="JEV_STACKS_READ_MORE_TEXT"
			description="JEV_STACKS_READ_MORE_TEXT_DESCRIPTION" />
				
		<param name="animated"
			type="radio"
			default="1"
			label="JEV_STACKS_ANIMATED"
			description="JEV_STACKS_ANIMATED_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="displaytime"
			type="text"
			default="5"
			label="JEV_STACKS_DISPLAY_TIME"
			description="JEV_STACKS_DISPLAY_TIME_DESCRIPTION" />

		<param name="arrows"
			type="radio"
			default="0"
			label="JEV_STACKS_ARROWS"
			description="JEV_STACKS_ARROWS_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="autoplay"
			type="radio"
			default="1"
			label="JEV_STACKS_AUTOPLAY"
			description="JEV_STACKS_AUTOPLAY_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
			
	</params>
	<params group="advanced">
	
		<param name="itemid"
			type="text"
			default=""
			label="JEV_STACKS_ITEM_ID"
			description="JEV_STACKS_ITEM_ID_DESCRIPTION" />
		
		<param name="modulename"
			type="text"
			default=""
			label="JEV_STACKS_MODULE_NAME"
			description="JEV_STACKS_MODULE_NAME_DESCRIPTION" />
		
		<param name="slideheight"
			type="text"
			default="100"
			label="JEV_STACKS_SLIDE_HEIGHT"
			description="JEV_STACKS_SLIDE_HEIGHT_DESCRIPTION" />
		
		<param name="customcss"
			type="radio"
			default="0"
			label="JEV_STACKS_CUSTOM_CSS"
			description="JEV_STACKS_CUSTOM_CSS_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="lengthtitle"
			type="text"
			default="60"
			label="JEV_STACKS_LENGTH_TITLE"
			description="JEV_STACKS_LENGTH_TITLE_DESCRIPTION" />
			
		<param name="truntitle"
			type="text"
			default=""
			label="JEV_STACKS_TRUNC_TITLE"
			description="JEV_STACKS_TRUNC_TITLE_DESCRIPTION" />
		
		<param name="lengthtext"
			type="text"
			default="250"
			label="JEV_STACKS_LENGTH_TEXT"
			description="JEV_STACKS_LENGTH_TEXT_DESCRIPTION" />
		
		<param name="truntext"
			type="text"
			default=""
			label="JEV_STACKS_TRUNC_TEXT"
			description="JEV_STACKS_TRUNC_TEXT_DESCRIPTION" />
		
		<param name="offset"
			type="text"
			default="0"
			label="JEV_STACKS_OFFSET"
			description="JEV_STACKS_OFFSET_DESCRIPTION" />
				
		<param name="transitiontime"
			type="text"
			default="0.25"
			label="JEV_STACKS_TRANSITION_TIME"
			description="JEV_STACKS_TRANSITION_TIME_DESCRIPTION" />
		
		<param name="transitiontype"
			type="list"
			default="linear"
			label="JEV_STACKS_TRANSITION_TYPE"
			description="JEV_STACKS_TRANSITION_TYPE_DESCRIPTION">
			<option value="none">NONE</option>
			<option value="crossFade">CROSSFADE</option>
			<option value="fadeThroughBackground">FADETHROUGHBACKGROUND</option>
			<option value="pushLeft">PUSHLEFT</option>
			<option value="pushRight">PUSHRIGHT</option>
			<option value="pushUp">PUSHUP</option>
			<option value="pushDown">PUSHDOWN</option>
			<option value="blindRight">BLINDRIGHT</option>
			<option value="blindLeft">BLINDLEFT</option>
			<option value="blindLeftFade">BLINDLEFTFADE</option>
			<option value="blindRightFade">BLINDRIGHTFADE</option>
			</param>
		
		<param name="crop_mode"
			type="list"
			default="adaptive"
			label="JEV_STACKS_CROP_MODE"
			description="JEV_STACKS_CROP_MODE_DESCRIPTION">
			<option value="js">JEV_STACKS_RESIZE_JS</option>
			<option value="basic">JEV_STACKS_RESIZE_BASIC</option>
			<option value="adaptive">JEV_STACKS_RESIZE_ADAPTIVE</option>
			<option value="crop">JEV_STACKS_CROP</option>
			</param>
			
		<param name="resizerjs"
			type="radio"
			default="1"
			label="JEV_STACKS_INCLUDE_RESIZER_JS"
			description="JEV_STACKS_RESIZER_JS_DESCRIPTION">
			<option value="0">NO</option>
			<option value="1">YES</option>
			</param>
		
		<param name="image_cache"
			type="list"
			default="1"
			label="JEV_STACKS_IMAGE_CACHING"
			description="JEV_STACKS_IMAGE_CACHING_DESCRIPTION">
			<option value="0">JEV_STACKS_NO_CACHING</option>
			<option value="1">JEV_STACKS_CACHE_IMAGES</option>
			</param>
			
		<param name="cache"
        	type="list"
        	default="1"
        	label="JEV_STACKS_CACHING"
        	description="JEV_STACKS_CACHING_DESCRIPTION">
        	<option value="0">NO CACHING</option>
         	<option value="1">USE GLOBAL</option>
    		</param>
    	
    	<param name="clearfix"
    		type="text"
    		default="clear"
    		label="JEV_STACKS_CLEARFIX_CLASS"
    		description="JEV_STACKS_CLEARFIX_CLASS_DESCRIPTION" />
    		
	</params>
</install>